<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">

  <input type=hidden name=authenticity_token value="<%= form_authenticity_token %>">

  <label>Title
    <input type=text name=goal[title] value="<%= @goal.title %>">
  </label>
  <br>
  <label>Body
    <textarea name=goal[body] rows="8" cols="40"><%= @goal.body %></textarea>
  </label>
<br>
  <label>Private?
    <label>Public
      <input type=radio name=goal[private_or_public] value="public"
      <%= "checked" if @goal.private_or_public == "public" %>>
    </label>
    <label>Private
      <input type=radio name=goal[private_or_public] value="private"
      <%= "checked" if @goal.private_or_public == "private" %>>
    </label>
  </label>
<br>
  <input type=submit value="Create Goal">

</form>
